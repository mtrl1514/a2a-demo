# ========================================
# API Keys (REQUIRED)
# ========================================

# AWS Bedrock (for Orchestrator & Research Agent)
# Model ID and region for AWS Bedrock
BEDROCK_MODEL_ID=apac.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_REGION=ap-northeast-2

# Google API Key (for Analysis Agent)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash


# ========================================
# Agent URLs (Frontend â†’ Agents)
# Optional - these are the defaults
# ========================================

# Orchestrator (Bedrock + AG-UI Protocol)
ORCHESTRATOR_URL=http://localhost:9100

# Direct Orchestrator (for testing - bypasses A2A middleware)
ORCHESTRATOR_DIRECT_URL=http://localhost:9103
USE_DIRECT_ORCHESTRATOR=false

# Research Agent (LangGraph + A2A Protocol)
RESEARCH_AGENT_URL=http://localhost:9101

# Analysis Agent (Gemini + A2A Protocol)
ANALYSIS_AGENT_URL=http://localhost:9102


# ========================================
# Agent Ports (Python Agents)
# Optional - used by Python agents to bind to specific ports
# ========================================

# Orchestrator
ORCHESTRATOR_PORT=9100

# Direct Orchestrator (for testing)
ORCHESTRATOR_DIRECT_PORT=9103

# Research Agent
RESEARCH_PORT=9101

# Analysis Agent
ANALYSIS_PORT=9102
